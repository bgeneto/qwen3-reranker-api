# Qwen Reranker Configuration
# Copy this file to config.env and modify as needed

# Model Configuration
MODEL_NAME=Qwen/Qwen3-Reranker-0.6B

# API Limits
MAX_DOCUMENTS=100
MAX_QUERY_LENGTH=2048
MAX_DOCUMENT_LENGTH=4096
REQUEST_TIMEOUT=300

# Logging Configuration
ENABLE_LOGGING=true
LOG_FILE_PATH=/app/logs/requests.log
LOG_METHOD=async

# Performance Tuning (Optimized for single GPU)
BATCH_SIZE=16
WORKERS=1

# Uvicorn Settings
UVICORN_WORKERS=1
UVICORN_LOOP=uvloop
UVICORN_HTTP=httptools

# Security Configuration
API_KEY=your-secret-api-key-here-generate-a-strong-one
REQUIRE_API_KEY=true
CORS_ORIGINS=*
