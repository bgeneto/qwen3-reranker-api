# Qwen3 Reranker GPU Configuration

# Model Configuration
MODEL_NAME=Qwen/Qwen3-Reranker-4B

# GPU Performance Settings
BATCH_SIZE=4
TORCH_THREADS=4
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True,max_split_size_mb:256

# API Limits
MAX_DOCUMENTS=100
MAX_QUERY_LENGTH=4096
MAX_DOCUMENT_LENGTH=8192
REQUEST_TIMEOUT=300

# Logging
ENABLE_LOGGING=true
LOG_FILE_PATH=/app/logs/requests.log
LOG_METHOD=async
LOG_LEVEL=INFO

# Security
CORS_ORIGINS=*

# Uvicorn Settings
UVICORN_WORKERS=1
UVICORN_LOOP=uvloop
UVICORN_HTTP=httptools

# Security Configuration
API_KEY=your-secret-api-key-here-generate-a-strong-one
REQUIRE_API_KEY=true
CORS_ORIGINS=*

# User/Group Configuration (use your host user/group ID to avoid permission issues)
# Run 'id' command on your host to get your UID and GID
UID=1000
GID=1000
